# Puter Cursor AI - Environment Configuration

# Puter.js API Configuration
PUTER_API_KEY=your_puter_api_key_here
PUTER_API_URL=https://api.puter.com
PUTER_MODEL=claude-3-sonnet

# Alternative AI API Keys (Optional)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Application Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# Window Settings
DEFAULT_WINDOW_WIDTH=1400
DEFAULT_WINDOW_HEIGHT=900
ENABLE_DEV_TOOLS=true

# Editor Settings
DEFAULT_FONT_SIZE=14
DEFAULT_FONT_FAMILY="JetBrains Mono"
DEFAULT_THEME=dark
ENABLE_MINIMAP=true
ENABLE_WORD_WRAP=false

# Terminal Settings
DEFAULT_SHELL=bash
TERMINAL_FONT_SIZE=12
TERMINAL_THEME=dark

# Features Toggle
ENABLE_AI_CHAT=true
ENABLE_AI_COMPLETION=true
ENABLE_GIT_INTEGRATION=true
ENABLE_TERMINAL=true
ENABLE_EXTENSIONS=true
ENABLE_COLLABORATION=false
ENABLE_TELEMETRY=false

# Performance Settings
MAX_FILE_SIZE_MB=50
MAX_SEARCH_RESULTS=1000
DEBOUNCE_DELAY_MS=300
AUTO_SAVE_DELAY_MS=2000

# Security Settings
ENABLE_CSP=true
ENABLE_SANDBOXING=true
ALLOW_EXTERNAL_URLS=false

# Plugin Settings
PLUGIN_MARKETPLACE_URL=https://marketplace.puter-cursor-ai.com
ENABLE_PLUGIN_AUTO_UPDATE=true
PLUGIN_SANDBOX_TIMEOUT=5000

# Cloud Settings (Optional)
CLOUD_SYNC_ENABLED=false
CLOUD_STORAGE_PROVIDER=puter
CLOUD_API_ENDPOINT=https://cloud.puter.com

# Analytics & Telemetry (Optional)
ANALYTICS_ENABLED=false
CRASH_REPORTING_ENABLED=false
USAGE_STATS_ENABLED=false

# Development Settings
HOT_RELOAD_ENABLED=true
SOURCE_MAPS_ENABLED=true
VERBOSE_LOGGING=false

# Language Server Settings
LSP_TIMEOUT=5000
LSP_MAX_WORKERS=4
ENABLE_LSP_LOGGING=false

# Git Settings
GIT_AUTO_FETCH=true
GIT_COMMIT_TEMPLATE=""
GIT_DEFAULT_BRANCH=main

# File Watcher Settings
FILE_WATCHER_POLLING=false
FILE_WATCHER_IGNORE_PATTERNS=".git,node_modules,.vscode"

# Search Settings
SEARCH_EXCLUDE_PATTERNS="node_modules,.git,dist,build"
SEARCH_INCLUDE_HIDDEN_FILES=false

# Backup Settings
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_MINUTES=10
MAX_BACKUP_FILES=50

# Update Settings
AUTO_UPDATE_ENABLED=true
UPDATE_CHANNEL=stable
CHECK_UPDATE_INTERVAL_HOURS=24

# Experimental Features
ENABLE_WEB_VERSION=false
ENABLE_MOBILE_COMPANION=false
ENABLE_VOICE_COMMANDS=false
ENABLE_AI_PAIR_PROGRAMMING=false